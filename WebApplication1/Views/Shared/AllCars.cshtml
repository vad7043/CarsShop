@model Car
    <div class="col-lg-4">
        <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />
        <h2>@Model.Name</h2>
        <p>@Model.ShortDesc</p>
        <p>Цена: @Model.Price.ToString("c", System.Globalization.CultureInfo.CreateSpecificCulture("en-us"));</p>
        <p><a class="btn btn-warning" href="#">Подробнее</a></p>
    </div>